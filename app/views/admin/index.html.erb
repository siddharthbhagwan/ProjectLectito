<h3> User List </h3><br/>
<table id="admin_view" class="table table-striped table-bordered table-condensed datatable">
  <thead>
    <tr>
      <th>User Id</th>
      <th>Name</th>
      <th>Email</th>
      <th>Current Status</th>
      <th>Priveleges</th>
   </tr>
  </thead>
  <tbody>
    <%  @user.each do |u| %>
      <tr>
        <td><%= link_to "#{u.id}", admin_user_details_path(user_id: u.id) %></td>
        <td><%= u.profile.user_first_name + " " + u.profile.user_last_name unless u.profile.blank? %></td>
        <td><%= u.email %></td>
        <td><%= u.current_status %></td>
        <td><%= u.checkrole %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <%= form_tag do %>
        <th><%= text_field_tag("search_id", nil, placeholder: "Id", class: 'form-control') %></th>
        <th><%= text_field_tag("search_name", nil, placeholder: "Name", class: 'form-control') %></th>
        <th><%= text_field_tag("search_email", nil, placeholder: "Email", class: 'form-control') %></th>
        <th><%= text_field_tag("search_current_status", nil, placeholder: "Current Status", class: 'form-control') %></th>
        <th><%= text_field_tag("search_priveleges", nil, placeholder: "Priveleges", class: 'form-control') %></th>
      <% end %>
    </tr>
  </tfoot>
</table>
</br></br>
