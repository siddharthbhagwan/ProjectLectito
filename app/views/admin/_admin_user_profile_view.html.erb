<h4> Profile Info </h4>
<table class='table table-striped table-bordered table-condensed'>
	<thead>
		<tr>
			<th>Name</th>
			<th>Date Of Birth</th>
			<th>Gender</th>
			<th>Current Status</th>
			<th>Phone Number</th>
			<th>SMS Updates</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<% if @user.profile.nil? %>
				<td colspan='6'> This User has not yet built his profile </td>
			<% else %>
				<td><%= @user.welcome_name %></td>
				<td><%= @user.profile.DoB.to_formatted_s(:long) %></td>
				<td><%= @user.profile.gender %></td>
				<td id='user_current_status'><%= @user.current_status %></td>
				<td><%= @user.profile.user_phone_no %></td>
				<td><%= @user.profile.sms_updates %></td>
			<% end %>
		</tr>
	</tbody>

</table>
