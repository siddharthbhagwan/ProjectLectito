<h4>Current Books</h4>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>ISBN</th>
    <th>Book Name</th>
    <th>Author</th>
    <th>Language</th>
    <th>Genre</th>
    <th>Version</th>
    <th>Edition</th>
    <th>Publisher</th>
    <th>Pages</th>
    <th>MRP</th>
  </tr>

<% @user.books.each do |book| %>
  <tr>
    <td><%= book.ISBN %></td>
    <td><%= book.book_name %></td>
    <td><%= book.author %></td>
    <td><%= book.language %></td>
    <td><%= book.genre %></td>
    <td><%= book.version %></td>
    <td><%= book.edition %></td>
    <td><%= book.publisher %></td>
    <td><%= book.pages %></td>
    <td><%= book.mrp %></td>
  </tr>
  <% end %>
</table>

