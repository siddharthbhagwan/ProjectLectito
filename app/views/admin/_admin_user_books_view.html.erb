<h4>Current Books</h4>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>ISBN</th>
    <th>Book Name</th>
    <th>Author</th>
    <th>Language</th>
    <th>Genre</th>
    <th>Version</th>
    <th>Edition</th>
    <th>Publisher</th>
    <th>Pages</th>
    <th>MRP</th>
    <th>Rental @</th>
  </tr>

<% @user.user_inventories.each do |book| %>
  <tr>
    <td><%= book.book_detail.isbn %></td>
    <td><%= book.book_detail.book_name %></td>
    <td><%= book.book_detail.author %></td>
    <td><%= book.book_detail.language %></td>
    <td><%= book.book_detail.genre %></td>
    <td><%= book.book_detail.version %></td>
    <td><%= book.book_detail.edition %></td>
    <td><%= book.book_detail.publisher %></td>
    <td><%= book.book_detail.pages %></td>
    <td><%= book.book_detail.mrp %></td>
    <td><%= book.rental_price %>
  </tr>
  <% end %>
</table>

