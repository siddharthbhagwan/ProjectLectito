<h3>My Transaction History</h3>

<%= paginate @t_history %>

<% if !@t_history.empty? %>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Book Name</th>
        <th>Lender/Borrower</th>
        <th>Rating </th>
        <th>Request Date @</th>
      </tr>
    <thead>

    <tbody>
      <% @t_history.each do |th| %>
        <tr>
          <!-- Book Name -->
          <td><%= Book.find(Inventory.find(th.inventory_id).book_id).book_name %></td>
        <!-- Checking If user is Lender or borrower for this transaction -->
          <% if th.lender_id == current_user.id %>
            <!-- Link To full Profile -->
            <td>
              <%= link_to User.find(th.borrower_id).full_name, "/profile/public_rating/#{th.id}" %> &nbsp;
            </td>

            <!-- feedback -->
            <td>
              <% if th.borrower_feedback.nil? or th.borrower_feedback.empty? %>
                Not Rated
              <% else %>
                <%= th.borrower_feedback.capitalize %>
              <% end %>
            </td>
          <% else %>
            <td>
              <%= link_to User.find(th.lender_id).full_name, "/profile/public_rating/#{th.id}" %> &nbsp;
            </td>
            <td>
              <% if th.lender_feedback.nil? or th.lender_feedback.empty? %>
                Not Rated
              <% else %>
                <%= th.lender_feedback.capitalize %>
              <% end %>
            </td>
          <% end %>

          <td><%= th.request_date.to_s(:long) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>