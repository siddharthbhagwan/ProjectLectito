<h4>Current Books</h4>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Book Name</th>
            <th>Author</th>
            <th>Rental @</th>
            <th>Current Status</th>
        </tr>
    </thead>

    <tbody>
        <% if @user.user_inventories.empty? %>
            <tr>
                <td colspan='3'>User has not uploaded any books as of now </td>
            </tr>
        <% else %>    
            <% @user.user_inventories.each do |user_inventory| %>
                <tr>
                    <td><%= user_inventory.book_detail.book_name %></td>
                    <td><%= user_inventory.book_detail.author %></td>
                    <td><%= user_inventory.rental_price %></td>
                    <td><%= user_inventory.current_status %></td>
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table>

<br />