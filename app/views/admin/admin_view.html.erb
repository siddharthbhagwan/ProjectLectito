<h2> User List </h2>
<%= paginate @user %>
<table class="table table-striped table-bordered table-condensed">
  <tr>
  	<th>User Id</th>
    <th>Name</th>
    <th>Email</th>
    <th>Gender</th>
    <th>Current Status</th>
    <th>Priveleges</th>
  </tr>

<%  @user.each do |u| %>
	<tr>
		<td><%= link_to "#{u.id}", admin_user_details_path(:user_id => u.id) , class:"btn btn-small" %></td>
    <td><%= u.profile.user_first_name + " " + u.profile.user_last_name %></td>
    <td><%= u.email %></td>    
    <td><%= u.profile.gender %></td>
    <td><%= u.profile.current_status %></td>
    <td><%= u.checkrole %></td>
	</tr>

<% end %>
</table>
<%= link_to "Back", admin_path, class:"btn btn-small" %>