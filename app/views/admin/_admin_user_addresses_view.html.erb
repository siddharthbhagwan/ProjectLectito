<h4>Address Info</h4>
<table id='adminaddress' class='table table-striped table-bordered table-condensed'>
  <thead>
    <tr>
      <th>Address</th>
      <th>Pin</th>
    </tr>
  </thead>

  <tbody>
    <% if @user.addresses.empty? %>
      <tr>
        <td colspan='6'>User has not added any addresses as of now </td>
      </tr>
    <% else %>
      <% @user.addresses.each do |ua| %>
        <tr>
          <td><%= ua.address_line1 %></td>
          <td><%= ua.pin %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
