<h4>Address Info</h4>
<table id="adminaddress" class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Address Line 1</th>
      <th>Locality</th>
      <th>City</th>
      <th>State</th>
      <th>Pin</th>
      <th>Country</th>
    </tr>
  </thead>
  <tbody>
    <% @user.addresses.each do |ua| %>
    <tr>
      <td><%= ua.address_line1 %></td>
      <td><%= ua.locality %></td>
      <td><%= ua.city %></td>
      <td><%= ua.state %></td>
      <td><%= ua.pin %></td>
      <td><%= ua.country %></td>  
    </tr>
  </tbody>
  <% end %>
</table>