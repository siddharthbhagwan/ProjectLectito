<h3>Current Transactions</h3>

<table class="table table-striped table-bordered table-hover" id="conversations">
  <thead>
    <tr>
      <th>Book Name</th>
      <th>Chat</th>
    </tr>
  </thead>
  <tbody>
    <% @current_transactions.each do |t| %>
      <tr id=<%= t.id %> >
        <td><%= Book.where(:id => Inventory.where(:id => t.inventory_id).take.book_id).take.author %></td>
        <td><%= link_to "Chat", chat_path(t.id), class: "btn btn-small "%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>