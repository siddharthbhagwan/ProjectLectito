<%= title('My Profile') %>

<h3>Profile</h3><br/>

<div class='col-md-3'>

  <div class='form_padding'>

    <%= form_for @profile, url: profile_index_path, method: :post do |f| %>

      <%= render 'error_messages' %>

      <%= f.text_field :user_first_name, placeholder: 'First Name', required: :true, class: 'form-control', value: @social_ufn %>

      <%= f.text_field :user_last_name, placeholder: 'Last Name', required: :true, class: 'form-control', value: @social_uln %>


      <%= f.text_field :user_phone_no, placeholder: '10 Digit Phone Number', maxlength: '10', required: :true, numericality: true, class: 'form-control' %>

      <%= f.label 'Gender', 'Gender' %>

      <div class='row'>
        
        <% if @social_gender.blank? || @social_gender == 'male' %>
          <div class='col-md-6'>
            <%= f.radio_button :gender, 'M', class: 'form-control', checked: true %>
            <%= f.label 'Male', 'Male' %>
          </div>
          <div class='col-md-6'>
            <%= f.radio_button :gender, 'F', class: 'form-control' %>
            <%= f.label 'Female', 'Female' %>
          </div>
        <% else %>
          <div class='col-md-6'>
            <%= f.radio_button :gender, 'M', class: 'form-control' %>
            <%= f.label 'Male', 'Male' %>
          </div>
          <div class='col-md-6'>
            <%= f.radio_button :gender, 'F', class: 'form-control', checked: true %>
            <%= f.label 'Female', 'Female' %>
          </div>
        <% end %>

      </div>

      <%= f.label 'Date', 'Date Of Birth' %>
      <%= f.text_field :DoB, placeholder: 'Select Date of Birth', required: :true, class: 'dob_class form-control'%>

      </br>

      <%= f.submit 'Create', class: 'btn btn-default' %>

    <% end %>

  </div>

</div>
