<%= form_for @profile, :url => "update" do |f| %>
<%= render 'error_messages' %>

<%= f.text_field :user_first_name, :placeholder => "First Name" %></br>

<%= f.text_field :user_last_name, :placeholder => "Last Name" %></br>	

<%= f.text_field :user_phone_no, :placeholder => "10 Digit Phone Number", :maxlength => "10" %></br>

Gender </br>	
<%= f.radio_button :gender, "M", :checked => 'checked' %>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
<%= f.radio_button :gender, "F" %></br>
Male &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; Female </br></br>

<%= f.label "Date", "Date Of Birth" %>
<%= f.date_select :DoB, {:start_year => 1950, :order => [:day, :month, :year], :end_year =>2000, :prompt => {:day => 'Day', :month => 'Month', :year => 'Year'}, :use_short_month => :true}, {:class => 'date-select'} %>

</br></br>
<%= f.check_box :contact_via_sms %>  Send me SMS alerts</br></br>

<%= f.submit "Update", class: "btn btn-small " %></br></br>

<%= link_to 'Edit Addresses', address_view_path, class: "btn btn-small" %>

<% end %>