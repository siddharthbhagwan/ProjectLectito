<h4> SMS Verification </h4>

<b><i> Please don't refresh this page</i></b><br/><br/>

<% if @otp_failed_attempts > 0 %>
  <b>Failed attempts : <%= @otp_failed_attempts %></b>
  <% if @otp_failed_attempts == 3 %>
    <% if !flash[:notice] %>
      <% flash.now[:alert] = 'You have exceeded the number of attempts. Your account has been locked. You can try again after 24 hours ' %>
    <% end %>  
  <% end %>
<% end %>
<br/><br/>

Please enter the 6 digit code sent to you on <b><%= @mobile_number %></b>

<br/><br/>

<div class='col-md-2'>

  <div class='form_padding'>

    <%= form_tag profile_otp_verification_path, method: :get do %>

    <% if @locked %>

      <%= text_field_tag :verification_code, nil, placeholder: 'Enter Code', disabled: :true, reuired: :true, autofocus: true, class: 'form-control' %>

      <%= hidden_field_tag :number, params[:number] %><br/>

      <%= submit_tag 'Confirm', class: 'btn btn-default', disabled: :true %>

    <% else %>

      <%= text_field_tag :verification_code, nil, placeholder: 'Enter Code', reuired: :true, autofocus: true, class: 'form-control' %>

      <%= hidden_field_tag :number, params[:number] %><br/>

      <%= submit_tag 'Confirm', class: 'btn btn-default' %>

    <% end %>
      

    <% end %>

  </div>

</div>
