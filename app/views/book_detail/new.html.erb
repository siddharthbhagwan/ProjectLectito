<h3>Add a book</h3></br>
<%= form_for @bookdetail, :url => "create" do |f| %>

<%= render 'error_messages' %>

<%= f.text_field :isbn, :placeholder => :ISBN %></br>

<%= f.text_field :book_name, :placeholder => "Book Name" %></br>	

<%= f.text_field :author, :placeholder => :Author %></br>
	
<%= f.text_field :language, :placeholder => :Language %></br>

<%= f.text_field :genre, :placeholder => :Genre %></br>

<%= f.text_field :version, :placeholder => :Version  %></br>

<%= f.text_field :edition, :placeholder => :Edition %></br>

<%= f.text_field :publisher, :placeholder => :Publisher %></br>

<%= f.text_field :pages, :placeholder => :Pages  %></br>

<%= f.text_field :mrp, :placeholder => :MRP %></br>

</br>

<%= f.submit "Add", class: "btn btn-small" %>
<%= link_to "Back", bookdb_view_path, class: "btn btn-small" %>

<% end %>