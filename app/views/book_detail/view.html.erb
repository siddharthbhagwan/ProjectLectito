<h3>Current Books</h3>


<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>ISBN</th>
    <th>Book Name</th>
    <th>Author</th>
    <th>Language</th>
    <th>Genre</th>
    <th>Version</th>
    <th>Edition</th>
    <th>Publisher</th>
    <th>Pages</th>
    <th>MRP</th>
    <th colspan="2">Manage</th>
  </tr>

<% @bookdetail.each do |bookdetail| %>
  <tr>
    <td><%= bookdetail.isbn %></td>
    <td><%= bookdetail.book_name %></td>
    <td><%= bookdetail.author %></td>
    <td><%= bookdetail.language %></td>
    <td><%= bookdetail.genre %></td>
    <td><%= bookdetail.version %></td>
    <td><%= bookdetail.edition %></td>
    <td><%= bookdetail.publisher %></td>
    <td><%= bookdetail.pages %></td>
    <td><%= bookdetail.mrp %></td>
    <td><%= link_to "Edit", bookdb_edit_path(:bookdetail_id => bookdetail.id), :action => "edit", class: "btn btn-small "%></td>
    <td><%= link_to "Delete", bookdb_delete_path(:bookdetail_id => bookdetail.id), :action => "delete", :confirm => "Are You Sure? ",class: "btn btn-small "%></td>
  </tr>
  <% end %>
</table>

<br />

<%= link_to 'Add a Book', bookdb_new_path, class: "btn btn-small" %>