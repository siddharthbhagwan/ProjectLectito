var $status_row ="<tbody>"
book_detail_id = <%= params[:book_detail_id] %>

available_tr = "#sub_available_list_" + book_detail_id
borrowed_tr = "#sub_borrowed_list_" + book_detail_id
$(available_tr).remove();
$(borrowed_tr).remove();

$final_table ="<tr id='sub_available_list_" + book_detail_id +"'><td colspan='2'><table id='sub_available_list_table' class='table table-hover table-condensed table-bordered'>"
$table_ending = "</tbody></table></td></tr>"
$table_header1 = "<tr id='sub_search_results_table_header1'><th>City</th><th>Rental</th></tr>"
$table_header2 = "<tr id='sub_search_results_table_header2'><th colspan='3'>Available</th></tr>"
<% if @available_list.empty? %>
	$status_row += "<tr><td colspan='2'>Sorry, No Copies of this Book have been borrowed currently</td></tr>"
<% else %>
	<%= i = 0 %>
	<% while i< @available_list.length %>
		$status_row += "<tr><td><%= Address.find(@available_list[i].available_in_city).city %></td><td><%= @available_list[i].rental_price.to_s %></td></tr>"
		<% i+= 1 %>	
	<% end %>
<% end %>

$final_table = $final_table + $table_header2 + $table_header1 + $status_row + $table_ending

$("#book_count_status_7 tr:last").after($final_table);
