var $tbody, $status_row ="", available_tr, borrowed_tr;
book_detail_id = <%= params[:book_detail_id] %>

available_tr = "#sub_available_list_" + book_detail_id
borrowed_tr = "#sub_borrowed_list_" + book_detail_id
$(available_tr).remove();
$(borrowed_tr).remove();

$final_table ="<tr id='sub_borrowed_list_" + book_detail_id +"'><td colspan='2'><table id='sub_borrowed_list_table' class='table table-hover table-condensed table-bordered'>"
$table_ending = "</tbody></table></td></tr>"
$table_header1 = "<tr id='sub_search_results_table_header1'><th>City</th><th>Rental</th></tr></thead>"
$table_header2 = "<thead><tr id='sub_search_results_table_header2'><th colspan='3'>Borrowed</th></tr>"
<%= i = 0 %>
<% while i< @borrowed_list.length %>
	$status_row += "<tbody><tr><td><%= Address.find(@borrowed_list[i].available_in_city).city %></td><td><%= @borrowed_list[i].rental_price.to_s %></td></tr>"
	<% i+= 1 %>	
<% end %> 
$final_table = $final_table + $table_header2 + $table_header1 + $status_row + $table_ending

$("#book_count_status_7 tr:last").after($final_table);
