<% if @address.errors.any? %>
  <div class='well'>
    <div id="error_explanation">
      <div class="alert alert-error">
        The form contains <%= pluralize(@address.errors.count, "error") %>.
      </div>
      <ul>
      <% @address.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>  
<% end %>