<h3>Add a New Address</h3><br/>

<div class='col-md-4'>

  <div class='form_padding'>

    <%= form_for @address, url: address_index_path do |f| %>

    <%= render 'error_messages' %>

    <%= f.text_area :address_line1, size: '20x6', placeholder: 'Address Line 1', required: :true, class: 'form-control' %>
    <%= f.number_field :pin, placeholder: :Pin, required: true, class: 'form-control' %>

    </br>

    <%= f.submit 'Add', class: 'btn btn-default' %>
    <%= link_to 'Back', address_index_path, class: 'btn btn-default' %>

    <% end %>

  </div>

</div>