<h3>My Books</h3>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>ISBN</th>
    <th>Book Name</th>
    <th>Author</th>
    <th>Language</th>
    <th>Genre</th>
    <th>Version</th>
    <th>Edition</th>
    <th>Publisher</th>
    <th>Pages</th>
    <th>MRP</th>
    <th>Manage</th>
  </tr>

  <% @userbook.each do |userbook| %>
  <tr>
    <td><%= userbook.book_detail.isbn %></td>
    <td><%= userbook.book_detail.book_name %></td>
    <td><%= userbook.book_detail.author %></td>
    <td><%= userbook.book_detail.language %></td>
    <td><%= userbook.book_detail.genre %></td>
    <td><%= userbook.book_detail.version %></td>
    <td><%= userbook.book_detail.edition %></td>
    <td><%= userbook.book_detail.publisher %></td>
    <td><%= userbook.book_detail.pages %></td>
    <td><%= userbook.book_detail.mrp %></td>
    <td><%= link_to "Remove", user_book_delete_path(:user_book_id => userbook.id), :action => "delete", :confirm => "Are You Sure? ",class: "btn btn-small "%></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add a Book', new_user_book_path, class: "btn btn-small" %>