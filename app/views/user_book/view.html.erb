<h3>My Books</h3>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Book Name</th>
    <th>Author</th>
    <th>Available @</th>
    <th>Rental</th>
    <th colspan='2'>Manage</th>
  </tr>

  <% @userbook.each do |userbook| %>
  <tr>
    <td><%= userbook.book_detail.book_name %></td>
    <td><%= userbook.book_detail.author %></td>
    <td><%= userbook.user.addresses.find(userbook.available_in_city).address_summary %></td>
    <td><%= userbook.rental_price %></td>
    <!--<td><%= link_to "Edit", user_book_edit_path(:user_book_id => userbook.id), :action => "edit" ,class: "btn btn-small "%></td> -->
    <td><%= link_to "Remove", user_book_delete_path(:user_book_id => userbook.id), :action => "delete", :confirm => "Are You Sure? ", class: "btn btn-small "%></td>
  </tr>
<% end %>
</table>

