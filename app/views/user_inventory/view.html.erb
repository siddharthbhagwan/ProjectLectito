<h3>My Books</h3>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Book Name</th>
    <th>Author</th>
    <th>Available @</th>
    <th>Rental</th>
    <th colspan='2'>Manage</th>
  </tr>

  <% @userinventory.each do |userinventory| %>
  <tr>
    <td><%= userinventory.book_detail.book_name %></td>
    <td><%= userinventory.book_detail.author %></td>
    <td><%= userinventory.user.addresses.find(userinventory.available_in_city).address_summary %></td>
    <td><%= userinventory.rental_price %></td>
    <!--<td><%= link_to "Edit", user_inventory_edit_path(:user_inventory_id => userinventory.id), :action => "edit" ,class: "btn btn-small "%></td> -->
    <td><%= link_to "Remove", user_inventory_delete_path(:user_inventory_id => userinventory.id), :action => "delete", :confirm => "Are You Sure? ", class: "btn btn-small "%></td>
  </tr>
<% end %>
</table>

