<h4> Summary of Books you've requested </h4>
<table id = "borrow_requests_table" class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
			<th>Book Name</th>
			<th>Lender</th>
			<th>Available @</th>
			<th>Delivery Mode</th>
			<th>Request Date</th>
			<th colspan='2'>Status</th>   
		</tr>
	</thead>
	<tbody>
		<% unless @borrow.nil? %>
			<% @borrow.each do |b| %>
				<tr id='borrow_<%= b.id %>' data-time='<%= b.created_at.to_i %>'>
					<td><%= Book.find(Inventory.find(b.inventory_id).book_id).book_name %></td>
					<td><%= link_to User.find(b.lender_id).full_name, "/profile/public_rating/#{b.id}", :target => "_blank" %></td>
					<td><%= Address.find(Inventory.find(b.inventory_id).available_in_city).address_summary %></td>
					<% if User.find(b.lender_id).is_delivery %>
						<td>Delivery</td>
					<% else %>
						<td>Self Pick/Drop</td>
					<% end %>					
					<td><%= b.request_date.to_s(:long) %></td>
					<td><%= b.status %></td>
					<td><%= tag "input", :type => "button", "data-trid" => b.id.to_s, :class => "btn btn-small cancel_trans" , :value => "Cancel" %></td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>