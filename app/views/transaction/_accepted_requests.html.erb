<h4> Summary of Requests for Books you've lent out </h4>
<table id = "accepted_requests_table" class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
			<th>Book Name</th>
			<th>Borrower</th>
			<th>Delivery Mode</th>
			<th>Acceptance Date</th>
			<th>Returned Date</th>  
			<th>Received Date</th>
			<th>Borrow Duration</th>
			<th>Status</th>
		</tr>
	</thead>
	<tbody>
		<% unless @accept.nil? %>
			<% @accept.each do |a| %>
				<tr id='accept_<%= a.id %>' >
					<td><%= Book.find(Inventory.find(a.inventory_id).book_id).book_name %></td>
					<td><%= User.find(a.borrower_id).full_name %></td>
					<td>
						<% if User.find(a.borrower_id).is_delivery %>
							Delivery
						<% else %>
							Self Pick/Drop
						<% end %>
					</td>
					<td><%= a.acceptance_date.to_s(:long) %></td>
					<% if a.returned_date.nil? %>
						<td>Pending</td>
					<% else %>
						<td><%= a.returned_date.to_s(:long) %></td>
					<% end %>
					<% if a.return_received_date.nil? %>
						<td>Pending</td>
					<% else %>
						<td><%= a.return_received_date.to_s(:long) %></td>
					<% end %>
					<td>Pending</td>
					<% if a.returned_date.nil? %>
						<td><input class="btn btn-small" type="button" value="Received" id="received" disabled='true' data-trid=<%= a.id %> /></td>
					<% else %>
						<td><input class="btn btn-small" type="button" value="Received" id="received" data-trid=<%= a.id %> /></td>
					<% end %>
				</tr>
			<% end %>
		<% end %>	
	</tbody>
</table>