<h4> Summary of Requests for Books you've lent out </h4>
<table id = "accepted_requests_table" class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
			<th>Book Name</th>
			<th>Borrower</th>
			<th>Delivery Mode</th>
			<th>Acceptance Date</th>  
			<th>Received Date</th>
			<th>Borrow Duration</th>
			<th>Returned Date</th>
			<th>Status</th>
		</tr>
	</thead>
	<tbody>
		<% unless @accept.nil? %>
			<% @accept.each do |a| #CHECKID %>
				<tr id='accepted_<%= a.id %>' >
					<td><%= Book.find(Inventory.find(a.inventory_id).book_id).book_name %></td>
					<td><%= link_to User.find(a.borrower_id).full_name, "/profile/public_rating/#{a.id}", :target => "_blank" %></td>
					<% if User.find(a.borrower_id).is_delivery %>
						<td>Delivery</td>
					<% else %>
						<td>Self Pick/Drop</td>
					<% end %>

					<td><%= a.acceptance_date.to_s(:long) %></td>

					<% if a.received_date.nil? %>
						<td>Pending</td>
					<% else %>
						<td><%= a.received_date.to_s(:long) %></td>
					<% end %>

					<% if a.borrow_duration.nil? %>
						<td>Pending</td>
					<% else %>
						<td><%= a.borrow_duration.to_s(:long) %></td>
					<% end %>

					<% if a.returned_date.nil? %>
						<td>Pending</td>
					<% else %>
						<td><%= a.returned_date.to_s(:long) %></td>
					<% end %>

					<% if a.status == 'Accepted' %>
						<% if User.find(a.lender_id).is_delivery %>
							<td><input class="btn btn-small" type="button" disabled='true' value="Received" id="received_lender_<%= a.id %>" data-trid=<%= a.id %> /></td>
						<% else %>
							<td><input class="btn btn-small" type="button" value="Handed Over" id="handed_over_<%= a.id %>" data-trid=<%= a.id %> /></td>
							<% end %>
					<% else %>
						<% if a.returned_date.nil? %>
							<td><input class="btn btn-small" type="button" value="Received" id="received_lender_<%= a.id %>" disabled='true' data-trid=<%= a.id %> /></td>
						<% else %>
							<td><input class="btn btn-small" type="button" value="Received" id="received_lender_<%= a.id %>" data-trid=<%= a.id %> /></td>
						<% end %>
					<% end %>	
				</tr>
			<% end %>
		<% end %>	
	</tbody>
</table>