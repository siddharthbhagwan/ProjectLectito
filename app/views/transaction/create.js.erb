<% unless @borrow.empty? %>
	<% @borrow.each do |b| %>
		$("#borrow_requests_table > tbody:last").append("raw(<tr data-time='<%= b.updated_at.to_i %>'><td><%= BookDetail.find(UserBook.find(b.user_book_id).book_detail.id).book_name %></td><td><%= Address.find(UserBook.find(b.user_book_id).available_in_city).address_summary %></td><td><%= UserBook.find(b.user_book_id).rental_price %></td><td><%= b.status %></td></tr>)");
	<% end %>
	$("#borrow_requests_div").show(500);
<% end %>

<% unless @lent.empty? %>
	<% @lent.each do |l| %>
		$("#lent_requests_table > tbody:last").append("raw(<tr data-time='<%= l.updated_at.to_i %>'><td><%= BookDetail.find(UserBook.find(l.user_book_id).book_detail_id).book_name %></td><td><%= Address.find(UserBook.find(l.user_book_id).available_in_city).address_summary %></td><td><%= UserBook.find(l.user_book_id).rental_price %></td></tr>)");
	<% end %>
<% end %>