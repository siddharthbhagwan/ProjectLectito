<h3>Edit <%= @book.book_name %> Details</h3></br>

<div class='col-md-3'>

  <div class='form_padding'>

    <%= form_for @book, url: book_path do |f| %>

      <%= render 'error_messages' %>

      <%= f.text_field :isbn, placeholder: :ISBN, required: :true, class: 'form-control' %>

      <%= f.text_field :book_name, placeholder: 'Book Name', required: :true, class: 'form-control' %>	

      <%= f.text_field :author, placeholder: :Author, required: :true, class: 'form-control' %>
      	
      <%= f.text_field :language, placeholder: :Language, required: :true, class: 'form-control' %>

      <%= f.text_field :genre, placeholder: :Genre, required: :true, class: 'form-control' %>

      </br>

      <%= f.submit 'Update', class: 'btn btn-default' %>
      <%= link_to 'Back', book_index_path, class: 'btn btn-default' %>

    <% end %>

  </div>

</div>