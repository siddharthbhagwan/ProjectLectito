<h3>Current Books</h3>

<table class="table table-striped table-bordered table-hover" id="bookdetail_table">
  <thead>
    <tr>
      <th>Book Name</th>
      <th>Author</th>
      <th>Copies</th>
      <th colspan="2">Manage</th>
    </tr>
  </thead>
  <tbody>
    <% @book.each do |book| %>
      <tr id=<%= book.id %> data-general_stats="closed">
        <td><%= book.book_name %></td>
        <td><%= book.author %></td>
        <td><%= Inventory.count(:conditions => "book_id = #{book.id}") %></td>
        <td><%= link_to "Edit", edit_book_path(book.id), class: "btn btn-small "%></td>
        <td><%= link_to "Delete", book_path(book.id), :method => "delete", :confirm => "Are You Sure? ",class: "btn btn-small "%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />

<%= link_to 'Add a Book', new_book_path, class: "btn btn-small" %>