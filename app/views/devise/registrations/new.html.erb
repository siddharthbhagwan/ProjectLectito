<%= title('Sign Up') %>

<div class='col-md-12'>

  <h2>Sign up</h2></br>

  <%= devise_error_messages! %>


  <div class='col-md-6'>

    <div class='form_padding'>

      <% unless params[:provider] == 'twitter' %>

        <h4> Using Email Id </h4><br/>

      <% end %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
        <div class='col-md-9'>

          <div><%= f.email_field :email, autofocus: true, placeholder: :Email, required: true, class: 'form-control' %></div>

          <% unless params[:provider] == 'twitter' %>

            <div><%= f.password_field :password, placeholder: :Password, required: :true, class: 'form-control' %></div>

            <div><%= f.password_field :password_confirmation, required: :true, placeholder: 'Confirm Password', class: 'form-control' %></div></br>

          <% end %><br/>

          <div><%= f.submit 'Sign up', class: 'btn btn-default btn-success' %></div>

        </div>

      <% end %>

    </div>

  </div>

  <% unless params[:provider] == 'twitter' %>

    <div class='verticalLine col-md-1'></div>

    <div class='col-md-5'>
      
    <h4>Using Twitter, Facebook, Gmail</h4>
    <span class="label label-info">Social authentication on invite only</span>

    <div class='col-md-9 sml' style="pointer-events:none">
        <%= link_to image_tag('facebook.png', size: '64x64'), user_omniauth_authorize_path(:facebook) %>&nbsp;
        <%= link_to image_tag('twitter.png', size: '64x64'), user_omniauth_authorize_path(:twitter) %>&nbsp;
        <%= link_to image_tag('google+.png', size: '64x64'), user_omniauth_authorize_path(:google_oauth2) %>&nbsp;
      </div>

    </div>

  <% end %>

  </div>
