<%= title('Change Password') %>

<h3>Change your password</h3><br/>

<div class='col-md-3'>

  <div class='form_padding'>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <%= f.password_field :password, autofocus: true, required: true, placeholder: 'New Password', class: 'form-control' %>

      <%= f.password_field :password_confirmation, placeholder: 'Confirm New Password', required: true, class: 'form-control' %><br/>

      <div><%= f.submit "Change my password", class: 'btn btn-default' %>
    <% end %>

  </div>

</div>
