<h3>Edit book</h3><br/>

		<div class='col-md-4'>
			<%= form_tag  "/inventory/#{@inventory.id}", method: :put do %>

				<div id='edit_inventory'>

					<div class='form_elements_padding'>
						<%= text_field_tag :book_name, Book.where(id: @inventory.book_id).take.book_name, placeholder: 'Book Name', required: true, width: '10', disabled: true, class: 'edit_inventory form-control'  %>
					</div>

					<div class='form_elements_padding'>
						<%= collection_select :inventory, :available_in_city, @address, :id, :address_summary, {}, { class: 'edit_inventory form-control' } %>
					</div>

					<div class='form_elements_padding'>
						<%= select_tag :status, options_for_select(['Available','Unavailable'], @inventory.status), placeholder: 'Current Status', class: 'edit_inventory form-control'  %>
					</div>

				</div><br/>

				<%= submit_tag 'Update', class: 'btn btn-default' %>
				<%= link_to 'Back', inventory_index_path, class: 'btn btn-default' %>

			<% end %>
		</div>	

		<div class='col-md-4'>
			<ul style='list-style-type: none'>
				<div class='form_elements_padding'>
					<li><%= text_field_tag :isbn, Book.where(id: @inventory.book_id).take.isbn, disabled: true, placeholder: :ISBN , class: 'edit_inventory form-control' %></li>
				</div>
				<div class='form_elements_padding'>
					<li><%= text_field_tag :author , Book.where(id: @inventory.book_id).take.author, disabled: true, placeholder: :Author , class: 'edit_inventory form-control' %></li>
				</div>	
				<div class='form_elements_padding'>
					<li><%= text_field_tag :language, Book.where(id: @inventory.book_id).take.language, disabled: true, placeholder: :Language , class: 'edit_inventory form-control' %></li>
				</div>	
				<div class='form_elements_padding'>
					<li><%= text_field_tag :genre, Book.where(id: @inventory.book_id).take.genre, disabled: true, placeholder: :Genre , class: 'edit_inventory form-control' %></li>
				</div>	
				<div class='form_elements_padding'>
					<li><%= text_field_tag :version, Book.where(id: @inventory.book_id).take.version, disabled: true, placeholder: :Version , class: 'edit_inventory form-control' %></li>
				</div>	
				<div class='form_elements_padding'>
					<li><%= text_field_tag :edition, Book.where(id: @inventory.book_id).take.edition, disabled: true, placeholder: :Edition , class: 'edit_inventory form-control' %></li>
				</div>	
				<div class='form_elements_padding'>
					<li><%= text_field_tag :publisher, Book.where(id: @inventory.book_id).take.publisher, disabled: true, placeholder: :Publisher , class: 'edit_inventory form-control' %></li>
				</div>	
				<div class='form_elements_padding'>
					<li><%= text_field_tag :pages, Book.where(id: @inventory.book_id).take.pages, disabled: true, placeholder: :Pages , class: 'edit_inventory form-control' %></li>
				</div>	
				<div class='form_elements_padding'>
					<li><%= text_field_tag :mrp, Book.where(id: @inventory.book_id).take.mrp, disabled: true, placeholder: :MRP , class: 'edit_inventory form-control' %></li>
				</div>	
			</ul>
		</div>
