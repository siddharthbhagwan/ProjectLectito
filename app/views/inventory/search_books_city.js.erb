    $rental_data += "<tr id='sub_search'>" + rental_available_at + delivery_charges + button_element + "</tr>";
    <%= i = i + 2 %>
  <% end %>
  
  $("#city_<%= params[:book_id] %>").remove();
  $final_table = $final_table + $rental_data + $table_ending
