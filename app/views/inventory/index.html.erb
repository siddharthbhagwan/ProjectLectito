<h3>My Books</h3>

<% if !@inventory.empty? %>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Book Name</th>
        <th>Author</th>
        <th>Available @</th>
        <th>Rental</th>
        <th>Current Status</th>
        <th colspan='2'>Manage</th>
      </tr>
    <thead>

    <tbody>
      <% @inventory.each do |inventory| %>
        <tr>
          <td><%= inventory.book.book_name %></td>
          <td><%= inventory.book.author %></td>
          <td><%= inventory.user.addresses.find(inventory.available_in_city).address_summary %></td>
          <td><%= inventory.rental_price %></td>
          <td><%= inventory.current_status %></td>
          <!--<td><%= link_to "Edit", edit_inventory_path(inventory.id), class: "btn btn-small "%></td> -->
          <td><%= link_to "Delete", inventory_path(inventory.id), :method => "delete", class: "btn btn-small ", :confirm => "Are you sure? "%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %> 

<br />

<%= link_to 'Add a Book', new_inventory_path, class: "btn btn-small" %>