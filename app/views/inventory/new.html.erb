<h3>Add a book</h3>
<%= form_tag  inventory_index_path, :id => "add_book_form" do %>
<div id="new_inventory">
<%= text_field_tag :book_name, nil, :placeholder => "Book Name", :required => :true, :width => "10" %></br>

<div style=" position:absolute; margin-left:220px; top:120px;">
	<ul style="list-style-type: none">
		<li><%= text_field_tag :isbn, nil, :disabled => true, :placeholder => :ISBN  %></li>
		<li><%= text_field_tag :author , nil, :disabled => true, :placeholder => :Author %></li>
		<li><%= text_field_tag :language, nil, :disabled => true, :placeholder => :Language %></li>
		<li><%= text_field_tag :genre, nil, :disabled => true, :placeholder => :Genre %></li>
		<li><%= text_field_tag :version, nil, :disabled => true, :placeholder => :Version %></li>
		<li><%= text_field_tag :edition, nil, :disabled => true, :placeholder => :Edition %></li>
		<li><%= text_field_tag :publisher, nil, :disabled => true, :placeholder => :Publisher %></li>
		<li><%= text_field_tag :pages, nil, :disabled => true, :placeholder => :Pages %></li>
		<li><%= text_field_tag :mrp, nil, :disabled => true, :placeholder => :MRP %></li>
	</ul>
</div>

<%= collection_select :inventory, :available_in_city, @address, :id, :address_summary %></br>

<!-- <%= text_field_tag :rental_price, nil, :placeholder => "Rental Price", :required => :true %></br> -->

<%= select_tag :status, options_for_select(['Available','Unavailable'], 'Available'), :placeholder => "Current Status" %>
</br></br>

<%= hidden_field_tag :book_id %>
</div>
<div>
<%= tag "input", :type => "button", :id => "add_book", :class => "btn btn-small" , :value => "Add Book" %></br></br>
<%= link_to "Back", inventory_index_path, class: "btn btn-small" %>
</div>

<p style=" position:absolute; margin-left:230px; top:122px;" hidden='true' id="book_name_empty"><i><b>No Such Book Found</b></i></p>

<% end %>