<div id='sign_in_div'>
  <div class='row'>
    <div class='col-md-12'>
      <div class='col-md-7'>
        <div class='col-md-8'>
          <div class='form_padding'>
            <h5>Sign In</h5>ยง
            <%= form_for(resource, as: resource_name, url: session_path(resource_name, class: 'form_elements_padding')) do |f| %>
                <%= f.email_field :email, autofocus: true, placeholder: :Email, class: 'form-control' %>
                <%= f.password_field :password, placeholder: "Password", class: 'form-control' %>
              <%= f.submit "Sign In", class: 'nfp btn btn-primary btn-sm', style:'margin:0px;' %><br/>
              <%= link_to "Forgot password", new_password_path(resource_name), class: :fplink %><br />
            <% end %>
          </div>
        </div>
        <div class='col-md-4 text-center'>
          <br/><br/><br/><br/>| OR |
        </div>
      </div>
      <div class='col-md-5 text-center'>
        <h5>Sign In Using</h5>
        <div class='sml'>
          <%= link_to image_tag('sign_in_twitter.png'), user_omniauth_authorize_path(:twitter) %>
          <%= link_to image_tag('sign_in_facebook.png'), user_omniauth_authorize_path(:facebook) %>
          <%= link_to image_tag('sign_in_google+.png'), '#' %> <!-- user_omniauth_authorize_path(:google_oauth2) %> -->
        </div>
      </div>
    </div>
  </div>
</div>
