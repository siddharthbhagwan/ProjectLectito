<!DOCTYPE html>
<html>
  <head>
    <title>ProjectLectito</title>
    <%= stylesheet_link_tag    'application', :media => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <!-- Responeible for responsive-ness on mobile devices -->
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
  </head>

  <body>
    <div class='wrapper'>
      <%= render 'layouts/header' %>
      <div class = 'container' >        
        <div class = 'col-md-12 col-md-offset1'>
          <% if flash[:notice] %>
            <p class='label label-success'><%= flash[:notice] %></p><br/>
          <% end %>
          <% if flash[:error] %>
            <p class='label label-important'><%= flash[:error] %><br/></p>
          <% end %>
          <% if flash[:info] %> 
            <p class='label label-info'><%= flash[:info] %><br/></p>
          <% end %>
          <% if alert %>
            <p class='label label-danger'><%= alert %><br/></p>
          <% end %>
          <%= yield %>
          <% if user_signed_in? %>
            <div id='chat_divs'>
            </div>
          <% end %>
        </div>        
      </div>
      <div class="push"></div>
      <% unless user_signed_in? %>
        <%= render 'layouts/sign_in' %>
      <% end %>  
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
