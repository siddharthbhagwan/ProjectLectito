<!DOCTYPE html>
<html>
<head>
	<title>ProjectLectito</title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= javascript_include_tag "autocomplete-rails.js" %>
	<%= stylesheet_link_tag "jquery-ui-1.10.3.custom.css" %>
	<%= csrf_meta_tags %>
	<!-- Responeible for responsive-ness on mobile devices -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<%= render 'layouts/header' %>
	<div class = "container" >
		<div class = "row">
			<div class = "span12">
				<% if flash[:notice] %>
				<p class="label label-success"><%= flash[:notice] %></p>
				<% end %>
				<% if flash[:error] %>
				<p class="label label-important"><%= flash[:error] %></p>
				<% end %>
				<% if flash[:info] %>
				<p class="label label-info"><%= flash[:info] %></p>
				<% end %>
				<% if alert %>
 				<p class="alert alert-error"><%= alert %></p>
				<% end %>
				<%= yield %>
			</div>		
		</div>		
	</div>
</body>
</html>
